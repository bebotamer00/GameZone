@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0">No games we add yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card text-white bg-secondary mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games"     asp-action="Details"
                   asp-route-id="@game.Id">
                    <div class="card-body" style="background-image: url(@($"{FileSettings.ImagesPath}/{game.Cover}"));
                    background-size: cover; background-position: center; height: 400px">
                        <div class="h-100 d-flex align-items-end fs-3">
                            <span class="badge bg-success">@game.Category.Name</span>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <h5>@game.Name</h5>
                        <div>
                            @foreach (var device in game.Devices)
                            {
                                <i class="@device.Device.Icon me-2 fs-4"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
